<?xml version="1.0" encoding="UTF-8"?>

<levels>
	<level id="1">          <!-- id就代表等级 -->
		<exp>50</exp>          <!-- 升级所需经验,也就是最大经验 -->
		<hp>100</hp>           <!-- 当前等级对应的最大血量 -->
		<mp>100</mp>           <!-- 当前等级对应的最大法力 -->
		<uHp>1</uHp>           <!-- 每秒自动增加的血量 -->
		<uMp>1</uMp>           <!-- 每秒自动增加的法力 -->
		<attack>5</attack>      <!-- 等级对应的攻击力 -->
	</level>


</levels>